<mvc:View
	controllerName="sap.ui.core.tutorial.odatav4.controller.App"
	displayBlock="true"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
		<Shell>
		<App id="app">
			<pages>
				<Page busy="{appView>/busy}" class="sapUiSizeCompact">
					<content>
							<List
								items="{/People}"
								headerText="{i18n>peoplePageTitle}"
								growing="true"
								growingThreshold="10"
								growingScrollToLoad="false">
								<StandardListItem
									id="deviceSimple"
									title="{FirstName} {LastName}"
									description="{Age}"
									type="Active"
									press=".onItemSelected"
								/>
							</List>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>