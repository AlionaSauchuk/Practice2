<mvc:View
	controllerName="sap.ui.odatav4.controller.Home"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<App id="home">
		<pages>
			<Page
		id="personListPage"
		title="{i18n>peoplePageTitle}"
		class="sapUiResponsiveContentPadding">
		<content>
			<List id="personList" 
				  headerText="{i18n>peopleListTitle}"
				  growing="true"
				  growingThreshold="10" 
				  items="{
					path: 'people>/value',
					factory: '.peopleListFactory'
					}"
			>
			<items>
					<StandardListItem
						title="{people>UserName}"
						type="Navigation"
						press = ".onItemSelected"
					/>
			</items>
			</List>
		</content>
	</Page>
		</pages>
	</App>
</mvc:View>