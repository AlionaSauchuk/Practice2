<mvc:View
	controllerName="sap.ui.odatav4.controller.Home"
	displayBlock="true"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
		<Page
		id="personListPage"
		title="{i18n>PersonList}"
		showNavButton="true"
		navButtonPress=".onNavBack"
		class="sapUiResponsiveContentPadding">
		<content>
			<List id="personList" 
				  headerText="{i18n>peoplePageTitle}" 
				  items="{
					path: 'people>/value',
					factory: '.peopleListFactory'
					}"
			>
				<dependents>
					<ObjectListItem
						id="peopleExtended"
						title="{people>UserName}"
						type="Active"
						press = ".onItemSelected">
					</ObjectListItem>
				</dependents>
			</List>
		</content>
	</Page>
</mvc:View>