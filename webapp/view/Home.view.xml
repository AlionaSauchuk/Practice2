<mvc:View
	controllerName="sap.ui.core.tutorial.odatav4.controller.Home"
	displayBlock="true"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
		<Page
		id="personListPage"
		title="{i18n>PersonList}"
		showNavButton="true"
		navButtonPress=".onNavBack"
		class="sapUiResponsiveContentPadding">
		<content>
			<List id="personList" headerText="{i18n>peoplePageTitle}" items="{/People}">
				<items>
					<StandardListItem
						title="{FirstName} {LastName}"
						iconDensityAware="false"
						iconInset="false"
						type="Navigation"
						press=".onItemSelected"/>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>