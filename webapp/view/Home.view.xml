<mvc:View
	controllerName="sap.ui.odatav4.controller.Home"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<App id="home">
		<pages>
			<Page
		id="personListPage"
		title="{i18n>peoplePageTitle}"
		class="sapUiResponsiveContentPadding">
		<content>
			<List id="personList" 
				  headerText="{i18n>peopleListTitle}" 
				  items="{
					path: 'people>/value',
					factory: '.peopleListFactory'
					}"
			>
				<dependents>
					<ObjectListItem
						id="peopleExtended"
						title="{people>UserName}"
						type="Active"
						press = ".onItemSelected">
					</ObjectListItem>
				</dependents>
			</List>
		</content>
	</Page>
		</pages>
	</App>
</mvc:View>